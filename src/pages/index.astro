---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => a.data.order - b.data.order);

// Fetch Stampy data from API
let stampyData = null;
try {
  const res = await fetch('https://stampycards.com/api/v1/public/info');
  if (res.ok) {
    stampyData = await res.json();
  }
} catch (e) {
  console.error('Failed to fetch Stampy data:', e);
}
