  <!-- Twitter/X Section -->
  <section class="py-12 border-t border-neutral-200">
    <div class="text-center mb-8">
      <a
        href="https://x.com/villaplanajp"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block hover:opacity-70 transition-opacity"
