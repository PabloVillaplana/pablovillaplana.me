  <!-- Projects Section -->
  <section class="py-12">
    <div class="mb-8">
      <h2 class="text-2xl font-semibold">Projects</h2>
      <p class="text-neutral-500 mt-1">Products with real impact.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {/* Stampy Project with live API data */}
      {stampyData && (
        <a
          href="https://stampycards.com"
          target="_blank"
          rel="noopener noreferrer"
          class="block p-6 hover:bg-neutral-50 rounded-lg transition-colors text-center"
        >
          <img
            src={stampyData.logo_avatar}
            alt={stampyData.name}
            class="w-24 h-24 mb-4 mx-auto"
          />
          <h3 class="font-bold text-lg text-[#fb8f5e]">{stampyData.name}</h3>
          <p class="text-neutral-500 text-sm">{stampyData.tagline}</p>

          <div class="mt-4 pt-4 border-t border-neutral-100 grid grid-cols-2 gap-4">
            <div>
              <div class="text-xl font-semibold">{stampyData.clients}</div>
              <div class="text-neutral-400 text-sm">clients</div>
            </div>
            <div>
              <div class="text-xl font-semibold">{stampyData.cards_issued}</div>
              <div class="text-neutral-400 text-sm">cards issued</div>
            </div>
            <div>
              <div class="text-xl font-semibold">{stampyData.subscriptions?.total_active || 0}</div>
              <div class="text-neutral-400 text-sm">subscriptions</div>
            </div>
            <div>
              <div class="text-xl font-semibold">${stampyData.revenue?.mrr || 0}</div>
              <div class="text-neutral-400 text-sm">MRR</div>
            </div>
          </div>
        </a>
      )}

      {/* Other projects from content collection */}
      {sortedProjects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          icon={project.data.icon}
          metric={project.data.metric}
          metricLabel={project.data.metricLabel}
          url={project.data.url}
        />
      ))}
    </div>

    {sortedProjects.length === 0 && !stampyData && (
      <div class="text-center py-12">
        <div class="text-5xl mb-4">ðŸš§</div>
        <p class="text-neutral-400">Working on it...</p>
      </div>
    )}
