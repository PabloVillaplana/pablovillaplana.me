---
interface Props {
  title: string;
  description: string;
  icon: string;
  metric?: string;
  metricLabel?: string;
  url?: string;
}

const { title, description, icon, metric, metricLabel, url } = Astro.props;
const Tag = url ? 'a' : 'div';
---

<Tag
  href={url}
  target={url ? '_blank' : undefined}
  rel={url ? 'noopener noreferrer' : undefined}
  class:list={[
    'block border border-neutral-200 rounded-lg p-6',
    url && 'hover:border-neutral-400 transition-colors cursor-pointer'
  ]}
>
  <div class="text-4xl mb-4">{icon}</div>
  <h3 class="font-medium text-lg">{title}</h3>
  <p class="text-neutral-500 text-sm mt-1">{description}</p>

  {metric && (
    <div class="mt-4 pt-4 border-t border-neutral-100">
      <div class="text-xl font-semibold">{metric}</div>
      {metricLabel && <div class="text-neutral-400 text-sm">{metricLabel}</div>}
    </div>
  )}
</Tag>
